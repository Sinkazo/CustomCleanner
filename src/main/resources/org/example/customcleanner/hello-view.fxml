<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.customcleanner.HelloController">
    <Pane fx:id="animationPane" style="-fx-background-color: transparent;"/>

    <VBox fx:id="mainContainer" alignment="CENTER" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 20;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label fx:id="welcomeText" style="-fx-font-size: 24; -fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <HBox spacing="10" alignment="CENTER">
            <CheckBox fx:id="tempCheck" text="Archivos Temporales" selected="true"/>
            <CheckBox fx:id="prefetchCheck" text="Prefetch" selected="true"/>
            <CheckBox fx:id="downloadsCheck" text="Descargas" selected="true"/>
            <CheckBox fx:id="recycleCheck" text="Papelera" selected="true"/>
        </HBox>

        <ProgressBar fx:id="progressBar" prefWidth="400.0" progress="0.0"
                     style="-fx-accent: #4CAF50;"/>

        <Label fx:id="statusLabel" text="Listo para escanear"/>

        <TableView fx:id="fileTable" VBox.vgrow="ALWAYS" prefHeight="300.0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Label fx:id="totalSizeLabel" text="TamaÃ±o total: 0 B"/>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="scanButton" text="Escanear" onAction="#onScanButtonClick"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="cleanButton" text="Limpiar Seleccionados" onAction="#onCleanButtonClick"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</StackPane>